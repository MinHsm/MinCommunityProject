<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Activity.LeaderActivity"
        tools:ignore="MissingDefaultResource">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btn_week"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="24dp"
                        android:layout_marginTop="24dp"
                        android:layout_weight="0.333"
                        android:background="@drawable/orange_background"
                        android:text="Weekly"
                        android:textColor="@color/white" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btn_mother"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="24dp"
                        android:layout_marginEnd="8dp"
                        android:layout_weight="0.333"
                        android:background="@drawable/white_background"
                        android:text="Monthily" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btn_alltime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="24dp"
                        android:layout_marginEnd="24dp"
                        android:layout_weight="0.333"
                        android:background="@drawable/white_background"
                        android:text="All Time" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.333"
                        android:orientation="vertical">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="200dp">

                            <com.google.android.material.imageview.ShapeableImageView
                                android:id="@+id/siv_top3"
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:padding="2dp"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintVertical_bias="0.7"
                                app:shapeAppearanceOverlay="@style/circleImageview"
                                app:strokeColor="#ae844f"
                                app:strokeWidth="3dp"
                                tools:ignore="MissingConstraints" />

                            <TextView
                                android:layout_width="28dp"
                                android:layout_height="28dp"
                                android:background="@drawable/circle_top_3"
                                android:gravity="center"
                                android:text="3"
                                android:textColor="@color/white"
                                android:textSize="23sp"
                                android:textStyle="bold"
                                app:layout_constraintBottom_toBottomOf="@+id/siv_top3"
                                app:layout_constraintEnd_toEndOf="@+id/siv_top3"
                                app:layout_constraintStart_toStartOf="@+id/siv_top3"
                                app:layout_constraintTop_toBottomOf="@+id/siv_top3"
                                tools:ignore="MissingConstraints" />

                        </androidx.constraintlayout.widget.ConstraintLayout>

                        <TextView
                            android:id="@+id/titleTop3Txt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="title"
                            android:textAlignment="center"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="7dp"
                            android:background="@drawable/score_top_3"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/iv_1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="4dp"
                                app:srcCompat="@drawable/garnet" />

                            <TextView
                                android:id="@+id/tv_ll_top3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="4dp"
                                android:layout_marginEnd="8dp"
                                android:text="00000"
                                android:textColor="@color/white" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.333"
                        android:orientation="vertical">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="200dp">

                            <com.google.android.material.imageview.ShapeableImageView
                                android:id="@+id/siv_top1"
                                android:layout_width="137dp"
                                android:layout_height="137dp"
                                android:padding="2dp"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:shapeAppearanceOverlay="@style/circleImageview"
                                app:strokeColor="#febb3a"
                                app:strokeWidth="3dp"
                                tools:ignore="MissingConstraints" />

                            <TextView
                                android:layout_width="28dp"
                                android:layout_height="28dp"
                                android:background="@drawable/circle_top_1"
                                android:gravity="center"
                                android:text="1"
                                android:textColor="@color/white"
                                android:textSize="23sp"
                                android:textStyle="bold"
                                app:layout_constraintBottom_toBottomOf="@+id/siv_top1"
                                app:layout_constraintEnd_toEndOf="@+id/siv_top1"
                                app:layout_constraintStart_toStartOf="@+id/siv_top1"
                                app:layout_constraintTop_toBottomOf="@+id/siv_top1"
                                tools:ignore="MissingConstraints" />

                            <ImageView
                                android:id="@+id/iv_4"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="-2dp"
                                app:layout_constraintBottom_toTopOf="@+id/siv_top1"
                                app:layout_constraintEnd_toEndOf="@+id/siv_top1"
                                app:layout_constraintStart_toStartOf="@+id/siv_top1"
                                app:srcCompat="@drawable/crown" />
                        </androidx.constraintlayout.widget.ConstraintLayout>

                        <TextView
                            android:id="@+id/titleTop1Txt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="title"
                            android:textAlignment="center"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="7dp"
                            android:background="@drawable/score_top_1"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/iv_2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="4dp"
                                app:srcCompat="@drawable/garnet" />

                            <TextView
                                android:id="@+id/tv_ll_top1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="4dp"
                                android:layout_marginEnd="8dp"
                                android:text="00000"
                                android:textColor="@color/white" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.333"
                        android:orientation="vertical">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="200dp">

                            <com.google.android.material.imageview.ShapeableImageView
                                android:id="@+id/siv_top2"
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:padding="2dp"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintVertical_bias="0.65"
                                app:shapeAppearanceOverlay="@style/circleImageview"
                                app:strokeColor="#bfbfc0"
                                app:strokeWidth="3dp"
                                tools:ignore="MissingConstraints" />

                            <TextView
                                android:layout_width="28dp"
                                android:layout_height="28dp"
                                android:background="@drawable/circle_top_2"
                                android:gravity="center"
                                android:text="2"
                                android:textColor="@color/white"
                                android:textSize="23sp"
                                android:textStyle="bold"
                                app:layout_constraintBottom_toBottomOf="@+id/siv_top2"
                                app:layout_constraintEnd_toEndOf="@+id/siv_top2"
                                app:layout_constraintStart_toStartOf="@+id/siv_top2"
                                app:layout_constraintTop_toBottomOf="@+id/siv_top2"
                                tools:ignore="MissingConstraints" />

                        </androidx.constraintlayout.widget.ConstraintLayout>

                        <TextView
                            android:id="@+id/titleTop2Txt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="title"
                            android:textAlignment="center"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="7dp"
                            android:background="@drawable/score_top_2"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/iv_3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="4dp"
                                app:srcCompat="@drawable/garnet" />

                            <TextView
                                android:id="@+id/tv_ll_top2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="4dp"
                                android:layout_marginEnd="8dp"
                                android:text="00000"
                                android:textColor="@color/white" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/leaderView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="80dp" />
            </LinearLayout>

        </ScrollView>

        <com.ismaeldivita.chipnavigation.ChipNavigationBar
            android:id="@+id/bottomMenu"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="@color/white"
            app:cnb_animationDuration="175"
            app:cnb_iconSize="20dp"
            app:cnb_menuResource="@menu/bottom_menu"
            app:cnb_orientationMode="horizontal"
            app:cnb_radius="50dp"
            app:cnb_unselectedColor="#757575"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:ignore="MissingConstraints" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>